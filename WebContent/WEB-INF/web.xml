<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>UserSessionManagement</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>com.wora.monitoring.util.Startup</listener-class>
	</listener>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.wora.monitoring.servlets.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<security-constraint>
		<display-name>monitor</display-name>
		<web-resource-collection>
			<web-resource-name>monitorPages</web-resource-name>
			<url-pattern>/jsp/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>monadmin</role-name>
			<role-name>monuser</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>CustomLogin</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login.jsp?err=1</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>monadmin</role-name>
	</security-role>
	<security-role>
		<role-name>monuser</role-name>
	</security-role>
</web-app>
